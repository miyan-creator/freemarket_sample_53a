<%=render 'partial/header'%>
<header>
  <ol class="progress">
    <li class="">
      会員情報
      <div class="progress__status"></div>
    </li>
    <li class="">
      電話番号認証
      <div class="progress__status"></div>
    </li>
    <li class="">
      お届け先住所入力
      <div class="progress__status"></div>
    </li>
    <li class="active">
      支払い方法
      <div class="progress__status"></div>
    </li>
    <li class="">
      完了
      <div class="progress__status"></div>
    </li>
  </ol>
</header>
<main class='single-main'>
  <section class='single-main__container'>
    <h2 class='single-main__container__header'>支払い方法</h2>
    <div class="single-main__container__form-group">
      <label for="credit_number">カード番号</label>
      <span class="single-main__container__form-group__requier">必須</span>
      <input type="number" value="" name="number" placeholder="半角数字のみ" class="single-main__container__form-group__input-form">
    </div>
    <div class="single-main__container__form-group">
      <label for="expiration_date">有効期限</label>
      <span class="single-main__container__form-group__requier">必須</span>
      <input type="month" value="" name="exporation_date" placeholder="" class="single-main__container__form-group__input-form">
    </div>

    <div class="single-main__container__form-group">
    <%# セキュリティコード　DB追加 %>
      <label for="security_code">セキュリティコード</label>
      <span class="single-main__container__form-group__requier">必須</span>
      <input type="number" value="" name="security_code" placeholder="カード背面4桁もしくが3桁の番号" class="single-main__container__form-group__input-form">
    </div>
    <div class="single-main__container__form-group text-right">
      <p>
        <a href="" target="_blank">
        <%=fa_icon("question-circle")%>カード裏面の番号とは？</a>
      </p>
    </div>
    <button type="submit" class="btn-default btn-red">
      <%=link_to'次へ進む',''%>
   </button>
  </section>
</main>
<%=render 'partial/footer'%>