%body
  = render 'partial/header'
  %header
    %ol.progress
      %li
        会員情報
        .progress__status
      %li
        電話番号認証
        .progress__status
      %li.active
        お届け先住所入力
        .progress__status
      %li
        支払い方法
        .progress__status
      %li
        完了
        .progress__status
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__header 住所入力
      .single-main__container__form-group
        %label お名前（全角）
        %span.single-main__container__form-group__requier 必須
        .single-main__container__form-group__requier__input
          %input.single-main__container__form-group__input-form{:name => "family_name", :placeholder => "例：　橋本", :type => "text", :value => ""}/
          %input.single-main__container__form-group__input-form{:name => "first_name", :placeholder => "例：　環奈", :type => "text", :value => ""}/
      .single-main__container__form-group
        %label お名前カナ（全角）
        %span.single-main__container__form-group__requier 必須
        .single-main__container__form-group__requier__input
          %input.single-main__container__form-group__input-form{:name => "family_kana_name", :placeholder => "例：　ハシモト", :type => "text", :value => ""}/
          %input.single-main__container__form-group__input-form{:name => "first_kana_name", :placeholder => "例：　カンナ", :type => "text", :value => ""}/
      .single-main__container__form-group
        %label 郵便番号
        %span.single-main__container__form-group__requier 必須
        .single-main__container__form-group__requier__input
          %input.single-main__container__form-group__input-form{:name => "postal_code", :placeholder => "例：　123-4567", :type => "number", :value => ""}/
      .single-main__container__form-group
