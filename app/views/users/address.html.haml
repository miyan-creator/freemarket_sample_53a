      .single-main__container__form-group
        %label 建物名
        %span.single-main__container__form-group__any 任意
        .single-main__container__form-group__requier__input
          %input.single-main__container__form-group__input-form{:name => "building_name", :placeholder => "例：　〇〇ビル3002", :type => "text", :value => ""}/
      .single-main__container__form-group
        %label 電話
        %span.single-main__container__form-group__any 任意
        .single-main__container__form-group__requier__input
          %input.single-main__container__form-group__input-form{:name => "tel", :placeholder => "例：　080-3218-3675", :type => "tel", :value => ""}/
      %button.btn-default.btn-red{:type => "submit"}
        = link_to'次へ進む',''
  = render 'partial/footer'
